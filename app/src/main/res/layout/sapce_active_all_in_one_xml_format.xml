<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="@dimen/_5sdp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_6sdp"
        android:layout_margin="@dimen/_6sdp"
        app:cardBackgroundColor="#F5F5DC"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/_6sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img"
                    app:shapeAppearanceOverlay="@style/circular"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    tools:srcCompat="@drawable/download" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_100sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activity Namedddddddddddddddddddddddddddddddddddd"
                        android:textSize="@dimen/_20ssp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10ssp"
                        android:text="space for outcome of the activity/description of the activity. This is a test message to test the alignment. dsssssssssssddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ðŸŽ‚ Age 5 to 10"
                    android:textColor="#0E0E0E" />

                <TextView
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:id="@+id/contains_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contains Videos -"
                    android:textColor="#0E0E0E"
                    android:layout_marginStart="@dimen/_5ssp"
                    />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/completed_or_not"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Completed -"
                    android:textColor="#0E0E0E" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>