<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_15sdp">
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardBackgroundColor="#c8cdce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="@dimen/_5sdp"
                    android:background="#c8cdce"
                    android:id="@+id/Consultant_Consultants_ImageView_ProfilePic"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/doctor_pic_consultus_main_view"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Consultant_Consultants_textView_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mr. Patient"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/Consultant_Consultants_textView_Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:alpha=".7"
                        android:text="1/Jan"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        />

                    <TextView
                        android:id="@+id/Consultant_Consultants_textView_Day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:text="Monday"
                        android:alpha=".7"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"/>
                    <TextView
                        android:id="@+id/Consultant_Consultants_textView_Timing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha=".7"
                        android:text="12:30 PM"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:visibility="gone"
                android:background="#c8cdce"
                android:id="@+id/bCall"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/ic_baseline_call_24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>