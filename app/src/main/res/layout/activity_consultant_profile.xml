<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ConsultUS.ConsultantProfile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="6.50dp"
                    android:layout_width="65.00dp"
                    android:layout_height="65dp"
                    android:background="@color/white"
                    android:id="@+id/consult_us_after"
                    android:contentDescription="consultus_pic"
                    android:src="@drawable/tile_icon_4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:layout_margin="6.50dp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="20.80sp"
                    android:layout_toEndOf="@+id/consult_us_after"
                    android:text="Consultants" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONSULTANT DETAILS"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_26ssp"
                />
            <TextView
                android:visibility="gone"
                android:layout_marginBottom="19.50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19.50dp"
                android:layout_marginEnd="19.50dp"
                android:text="Connect with India’s top doctor consultant for your child"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="@dimen/_26ssp"
                />

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#D9D9D9"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/Consultant_Profile_ImageView_ProfilePic"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_25sdp"
                        app:srcCompat="@drawable/img_1" />
                    <TextView
                        android:layout_marginTop="@dimen/_25sdp"
                        android:id="@+id/Consultant_Profile_textView_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:text="Dr. Doctor" />
                    <TextView
                        android:id="@+id/Consultant_Profile_textView_Speciality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:alpha=".8"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/black"
                        android:text="Neuro Medicine Specialist" />

                    <TextView
                        android:id="@+id/Consultant_Profile_textView_Qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:alpha=".6"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:text="Qualification : "/>

                    <TextView
                        android:id="@+id/Consultant_Profile_textView_Charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Charges : ₹ "
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:alpha=".6"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/Consultant_Profile_textView_Language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Language : "
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:alpha=".6"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/Consultant_Profile_textView_Chamber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxHeight="60dp"
                        android:text="Chamber : "
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:alpha=".6"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"/>




                    <TextView
                        android:id="@+id/Consultant_Profile_textView_Days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:alpha=".6"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:text="Available Days : "/>

                    <TextView
                        android:id="@+id/Consultant_Profile_textView_Timing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:alpha=".6"
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:text="Available Time : "/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:background="@drawable/round_background"
                android:gravity="center_horizontal"
                android:padding="@dimen/_10sdp"
                android:text="Book Appointment"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:id="@+id/Consultant_Profile_Button_GetAppointment"
                android:paddingVertical="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Designed by Ashish"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:alpha=".5"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>