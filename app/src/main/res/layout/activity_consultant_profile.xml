<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ConsultUS.ConsultantProfile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFDC5D">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="25dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/Consultant_Profile_ImageView_ProfilePic"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/consultant" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/Consultant_Profile_textView_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Dr. Doctor" />
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/Consultant_Profile_textView_Speciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="Neuro Medicine Specialist" />

    <LinearLayout
        android:layout_margin="5dp"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/Consultant_Profile_textView_Days"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/Spacece_Yelloww"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:text="Monday,Tuesday,Saturday,Wednesday,Thursday,Friday"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/Consultant_Profile_textView_Timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 AM - 6 PM"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/Spacece_Yelloww"
            android:paddingVertical="6dp"
            android:layout_marginLeft="50dp"
            android:textSize="14dp"
            android:background="@drawable/circle"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:minWidth="500dp"
        android:layout_height="wrap_content"
        android:elevation="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Qualification : " />
            <TextView
                android:id="@+id/Consultant_Profile_textView_Qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="60dp"
                android:text="Highly Qualified"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:minWidth="500dp"
        android:layout_height="wrap_content"
        android:elevation="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Charges : " />
            <TextView
                android:id="@+id/Consultant_Profile_textView_Charges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 400 /-"
                android:drawableStart="@drawable/rupee10"/>
        </LinearLayout></androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:minWidth="500dp"
        android:layout_height="wrap_content"
        android:elevation="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Language : " />
            <TextView
                android:id="@+id/Consultant_Profile_textView_Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English" />
        </LinearLayout></androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:minWidth="500dp"
        android:layout_height="wrap_content"
        android:elevation="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Chamber : " />
            <TextView
                android:id="@+id/Consultant_Profile_textView_Chamber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="60dp"
                android:text=" Self Clinic"
                android:drawableEnd="@drawable/ic_baseline_location_on_24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/Consultant_Profile_Button_GetAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:layout_marginTop="15dp"
        android:textSize="10dp"
        android:paddingVertical="1dp"
        android:background="@drawable/round_background"
        android:textColor="@color/white" />

</LinearLayout>
</ScrollView>